page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 70vw;
  text-align: center;
}
.detail_swiper swiper image {
  width: 70%;
}
.goods_price {
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.goods_name_row {
  display: flex;
  font-size: 25rpx;
  color: #7e7e7b;
}
.goods_name_row .goods_name {
  flex: 4;
  padding: 15rpx 30rpx;
  border-right: 2rpx solid #7e7e7b;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  padding: 15rpx 30rpx;
  justify-content: center;
  text-align: center;
}
.goods_name_row .goods_collect .icon-xingxing1 {
  color: var(--themeColor);
}
.goods_info .goods_info_title {
  padding: 15rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.btm_tool {
  border-top: 2rpx solid #d1d1d1;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgba(83, 83, 83, 0.657);
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_cart {
  flex: 2;
  background-color: #f8d359;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}
.btm_tool .btn_buy {
  flex: 2;
  background-color: #559cd6d3;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}
