page {
  padding-bottom: 90rpx;
}
.user_info {
  display: flex;
  align-items: center;
}
.user_info image {
  width: 50rpx;
  margin-left: 10rpx;
}
.user_info .user_name {
  margin: 0 10rpx;
}
.user_info .user_phone {
  margin: 0 10rpx;
}
.user_detailInfo {
  display: flex;
  align-items: center;
}
.user_detailInfo image {
  width: 50rpx;
  margin-left: 10rpx;
}
.cart_content {
  margin-top: 10rpx;
}
.cart_content .cart_titl {
  padding: 10rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--themeColor);
  border-bottom: 2rpx dashed currentColor;
  border-top: 2rpx dashed currentColor;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_img_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_main .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart_content .cart_main .cart_info_wrap .goods_price_wrap .goods_price {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.cart_content .cart_main .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
}
.footer_tool .total_price_wrap {
  flex: 4;
  text-align: right;
  padding-right: 30rpx;
  font-size: 25rpx;
}
.footer_tool .total_price_wrap .total_price {
  font-size: 30rpx;
}
.footer_tool .total_price_wrap .total_price text.total_price_all {
  color: var(--themeColor);
  font-size: 35rpx;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  display: flex;
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
}
