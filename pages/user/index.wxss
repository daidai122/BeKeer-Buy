.user_info_wrap {
  position: relative;
  height: 45vh;
  background-color: var(--themeColor);
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 45vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 20rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid rgba(65, 182, 110, 0.966);
  border-radius: 30rpx;
  padding: 20rpx 100rpx;
  color: rgba(65, 182, 110, 0.966);
  font-size: 60rpx;
  font-weight: 700;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  background-color: #fff;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -60rpx;
  font-size: 32rpx;
  color: #747474;
}
.user_content .user_main .history_wrap {
  display: flex;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
  font-weight: 700;
}
.user_content .user_main .order_wrap {
  margin-top: 30rpx;
  font-size: 32rpx;
  background-color: #fff;
}
.user_content .user_main .order_wrap .orde_title {
  color: var(--themeColor);
  font-weight: 700;
  padding: 25rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order_wrap .order_content {
  margin-top: 20rpx;
  display: flex;
}
.user_content .user_main .order_wrap .order_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .user_main .order_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 45rpx;
}
.user_content .user_main .address_wrap {
  margin: 30rpx 0;
  padding-top: 20rpx;
}
.user_content .user_main .app_info .app_info_item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .user_main .recommend_wrap {
  margin: 20rpx 0;
  padding-top: 20rpx;
}
