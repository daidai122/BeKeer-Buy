.collect_choose {
  display: flex;
  height: 80rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.collect_choose .collect_choose_item {
  border: 1rpx solid #666;
  border-radius: 10%;
  margin: 10rpx;
  padding: 10rpx;
  justify-content: center;
  align-self: center;
}
.collect_choose .active {
  color: var(--themeColor);
  border: 1rpx solid currentColor;
}
.collect_content .goods_item {
  display: flex;
  border-bottom: 2rpx solid #cececb;
}
.collect_content .goods_item .goods_img_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_content .goods_item .goods_img_wrap image {
  width: 70%;
}
.collect_content .goods_item .goods_info_wrap {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_content .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_content .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
